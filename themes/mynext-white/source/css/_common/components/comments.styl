.comments { 
	margin: 60px 0;
    padding: 20px 30px;
    background: #fff;
    border-radius: 3px;
    box-shadow: 0 0 3px rgba(0,0,0,0.15);
}

//gitalk

a.gt-link a.gt-link-counts,
a.gt-header-controls-tip{
	color: $blue-bright;
	border-bottom: 0px solid $blue-bright;
	&:hover{
		color: $blue-bright;
		border-bottom: 1px solid $blue-bright;
	}
}

.gt-popup a{
	color: $blue-bright;
	order-bottom: 0px solid $blue-bright;
}

.gt-container a.is--active{
	color: #333;
    cursor: default !important;
}

button.gt-btn gt-btn-public{
	background-color: #222
	&:hover{
		color: #555;
	}
}

p.gt-comments-null{
	display: none;
}